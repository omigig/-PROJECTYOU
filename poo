<html>
	<head>
		<title>#PROJECTYOU</title>
		<script src="http://cloud.github.com/downloads/processing-js/processing-js/processing-1.4.1.min.js"></script>
		<script type="text/processing" data-processing-target="mycanvas">
		/* *****************************************************************************************
						put your code below!
		******************************************************************************************* */
		var paddle;
		void setup(){
			size(800,600);
			background(17,9,89);
			paddle = new Paddle (100,10,[200,75,20]);
        }
			
		
		class Paddle{
			var r;
			var g; 
			var b;
			var xPosition;
			var yPosition;
		

			Paddle(l,w,color){
				xPosition=mouseX;
				yPosition= 300;
				r = color[0];
				g = color[1];
				b = color[2];
			}
				
			void drawPaddle(){
				noStroke;
				fill(r, g, b);
				xPosition = mouseX;
				triangle(xPosition, 100, xPosition+40, 60,xPosition+50, 100);
				fill(#FFFF00)
                triangle(xPosition, 100, xPosition+30, 50,xPosition+40, 100);
                fill(#FF3300)	
                triangle(xPosition, 100, xPosition+20, 40,xPosition+30, 100);

               
			}

		}

		void draw(){
			background(17,9,89);
			paddle.drawPaddle();	
		}	
		
		</script>
	</head>
	<body>
		<canvas id="mycanvas"></canvas>
	</body>
</html>
